<h1 class="text-2xl pt-10 mb-10">Edit Comment</h1>

<%= form_for([@blog, @comment]) do |f| %>
  <div class="form-group">
    <%= f.text_area :body, class: "w-full p-2 border rounded", value: @comment.body %>
  </div>
  <%= f.submit "Update Comment", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 mb-5" %>
<% end %>

<%= link_to "Cancel", blog_path(@blog), class: "text-gray-600" %>
