    <section class="py-20 lg:py-44 flex justify-center item-start gap-20">

        <div class="text-content w-[50%] ">
            <h3 class="text-2xl font-medium mb-5">Welcome to Typenest!</h3>
            <h2 class="text-7xl font-semibold mb-5">Write something beautiful</h2>
            <p class="text-lg font-semibold w-[60%] mb-10">Discover a home for your thoughts. Write, read, and connect through meaningful stories and ideas shared by a growing community of writers.</p>

            <button class="">
                <%= link_to signup_path, class: "inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-900" do %>
                <span> Get started </span>
                <svg class="w-3.5 h-3.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
                <% end %>
            </button>
        </div>

        <div class="image w-[30%]">
            <%= image_tag "hero.svg", alt: "Hero image" %>
        </div>
     
    </section>


