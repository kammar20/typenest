<% if obj.errors.any? %>

<div id="flash-msg" class="p-4 my-4 text-sm rounded-lg bg-gray-800 text-blue-400 flex justify-between">
    <div>
        <h2 class="text-xl font-medium mb-2"><%= pluralize(obj.errors.count, "error") %> prevented this <%= obj.class.name.downcase %> from being saved:</h2>
        <ul class="pl-8">
          <% obj.errors.full_messages.each do |msg| %>
            <li class="list-disc"><%= msg %></li>
          <% end %>
        </ul>
    </div>
    <button id="flash-cancle-btn" class="inline-flex item-start active:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 w-full inline">
            <path fill-rule="evenodd" d="M5.47 5.47a.75.75 0 0 1 1.06 0L12 10.94l5.47-5.47a.75.75 0 1 1 1.06 1.06L13.06 12l5.47 5.47a.75.75 0 1 1-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 0 1-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
          </svg>
    </button>
</div>

<% end %>