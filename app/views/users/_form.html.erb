<%= render "shared/errors", obj: @user %>

<%= form_tag form_url, method: form_method, multipart: true do %>

<div class="mb-7">
    <%= label_tag :username, "Username", class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= text_field_tag :username, @user.username, class: "w-full border border-gray-600 text-gray-900 text-sm rounded-lg p-2.5" %>
  </div>

<div class="mb-7">
    <%= label_tag :usertitle, "User Title", class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= text_field_tag :usertitle, @user.usertitle, class: "w-full border border-gray-600 text-gray-900 text-sm rounded-lg p-2.5" %>
  </div>

  <div class="mb-7">
    <%= label_tag :email, "Email", class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= email_field_tag :email, @user.email, class: "w-full border border-gray-600 text-gray-900 text-sm rounded-lg p-2.5" %>
  </div>

  <div class="mb-7">
    <%= label_tag :password, "Password", class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= password_field_tag :password, nil, class: "w-full border border-gray-600 text-gray-900 text-sm rounded-lg p-2.5" %>
  </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <%= link_to "Cancel", blogs_path, class: "text-sm/6 font-semibold text-gray-900" %>
    <%= submit_tag submit_text, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500" %>
  </div>
  <% end%>

